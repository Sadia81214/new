<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5sp"
    android:layout_marginLeft="5sp"
    android:layout_marginRight="5sp"
    android:orientation="vertical"
    android:background="@drawable/border1"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/propic"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10sp"
            android:src="@drawable/profile"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rakibul Islam Mrkbil"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/name"
                    />

                <TextView
                    android:drawableRight="@drawable/ic_baseline_star_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(4.9/5)"
                    android:layout_marginLeft="5sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:id="@+id/rating"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2sp"
                android:text="5000 tk/Month"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics/Chemistry/Biology"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:id="@+id/subjects"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_weight="1.5"
                android:layout_height="30sp"
                android:text=" Message"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_baseline_message_24teal"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginTop="2sp"
                android:textColor="@color/teal_700"
                 android:layout_width="0dp"
                android:id="@+id/sendmsg"
                />
            <TextView
                android:layout_weight="1"
                android:layout_height="30sp"
                android:text=" Call"
                android:textSize="18sp"
                android:drawableStart="@drawable/ic_baseline_call_24teal"
                android:textStyle="bold"
                android:layout_marginTop="2sp"
                android:textColor="@color/teal_700"
                android:layout_width="0dp"
                android:id="@+id/call"
                />
            <TextView
                android:layout_weight="1"
                android:layout_height="30sp"
                android:text=" Rate"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_baseline_star_rate_24teal"
                android:textColor="@color/teal_700"
                android:layout_marginTop="2sp"
                android:visibility="gone"
                android:id="@+id/rate"
                android:layout_width="0dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>